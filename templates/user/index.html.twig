{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <main class="h-full w-full flex items-center">
        <twig:Sidebar/>

        <section class="h-full flex-grow pt-8">
            <div class="px-8 flex items-center justify-between">
                <div class="flex flex-col gap-1">
                    <h1 class="text-primary font-semibold text-3xl">Users</h1>
                    <p class="text-tertiary font-normal">Visualisez et gérez les utilisateurs de votre application.</p>
                </div>

                <div>
                    <button data-modal-target="new-modal" data-modal-toggle="new-modal" class="flex items-center gap-2 text-white bg-orange-600 hover:bg-orange-700 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded-lg text-sm px-3 py-2.5 text-center" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path d="M9.99996 4.16669V15.8334M4.16663 10H15.8333" stroke="white" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        Créer un utilisateur
                    </button>

                    <div id="new-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
                        <div class="relative p-4 w-full max-w-2xl max-h-full">
                            <div class="relative bg-white rounded-lg shadow">
                                <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                                    <h3 class="text-xl font-semibold text-gray-900">
                                        Créer un utilisateur
                                    </h3>
                                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="new-modal">
                                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                                        </svg>
                                        <span class="sr-only">Close modal</span>
                                    </button>
                                </div>
                                <section class="p-4 md:p-5 space-y-4">
                                    {{ form_start(form) }}
                                    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                                        <div>
                                            {{ form_row(form.fullName) }}
                                        </div>
                                        <div>
                                            {{ form_row(form.email) }}
                                        </div>
                                        <div>
                                            {{ form_row(form.password) }}
                                        </div>
                                        <div>
                                            {{ form_row(form.roles) }}
                                        </div>
                                        <div>
                                            {{ form_row(form.isVerified) }}
                                        </div>
                                    </div>

                                    <div class="flex items-center mt-5 pt-5 border-t border-gray-200 rounded-b">
                                        <button data-modal-hide="new-modal" type="submit" class="text-white bg-orange-600 hover:bg-orange-700 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Créer</button>
                                        <button data-modal-hide="new-modal" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-orange-700 focus:z-10 focus:ring-4 focus:ring-gray-100">Annuler</button>
                                    </div>
                                    {{ form_end(form) }}
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <section class="px-8 mt-8">
                <div class="relative overflow-x-auto sm:rounded-lg">
                    <table class="w-full text-sm text-left rtl:text-right text-gray-500">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                ID
                            </th>
                            <th scope="col" class="px-6 py-3">
                                FullName
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Email
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Roles
                            </th>
                            <th scope="col" class="px-6 py-3">
                                IsVerified
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Action
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr class="odd:bg-white even:bg-gray-50 border-b">
                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                    {{ user.id }}
                                </th>
                                <td class="px-6 py-4">
                                    {{ user.fullName }}
                                </td>
                                <td class="px-6 py-4">
                                    {{ user.email }}
                                </td>
                                <td class="px-6 py-4">
                                    {{ user.roles ? user.roles|json_encode : '' }}
                                </td>
                                <td class="px-6 py-4">
                                    {{ user.isVerified ? 'Yes' : 'No' }}
                                </td>
                                <td class="px-6 py-4">
                                    <a href="#" class="font-medium text-blue-600  hover:underline">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
        </section>
    </main>
{% endblock %}
