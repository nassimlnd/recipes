{% extends 'base.html.twig' %}

{% block title %}New Recipe{% endblock %}

{% block body %}
    <main class="h-full w-full flex items-center">
        <twig:Sidebar/>

        <section class="h-full flex-grow py-8">
            <div class="px-8">
                <div class="flex flex-col gap-1">
                    <h1 class="text-primary font-semibold text-3xl">Nouvelle recette</h1>
                    <p class="text-tertiary font-normal">
                        Concoctez une nouvelle recette pour vos proches et partagez-la avec la communauté.
                    </p>
                </div>
            </div>

            <section class="px-8 mt-8">
                {{ form_start(form) }}
                <div class="flex gap-6">
                    <div class="flex flex-col gap-6 w-full border border-secondary py-4 px-6 rounded-lg">
                        <h2 class="text-xl text-secondary font-semibold">Informations</h2>
                        <div class="flex flex-col gap-2">
                            <div>
                                {{ form_row(form.name) }}
                            </div>
                            <div>
                                {{ form_row(form.description) }}
                            </div>
                            <div>
                                {{ form_row(form.preparationTime) }}
                            </div>
                            <div>
                                {{ form_row(form.cookingTime) }}
                            </div>
                            <div>
                                {{ form_row(form.servings) }}
                            </div>
                            <div>
                                {{ form_row(form.difficulty) }}
                            </div>
                            <div>
                                {{ form_row(form.cuisine) }}
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col gap-6 w-full border border-secondary py-4 px-6 rounded-lg">
                        <div class="flex justify-between">
                            <h2 class="text-xl text-secondary font-semibold">Étapes</h2>
                            <button type="button" class="text-white bg-orange-600 hover:bg-orange-700 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded-lg text-sm px-3 py-2.5 text-center">
                                Ajouter une étape
                            </button>
                        </div>
                        <div>

                        </div>
                    </div>
                </div>
                <div>
                </div>
{#                {{ include('recipe/_form.html.twig') }}#}

                {{ form_end(form) }}
            </section>
        </section>
    </main>
{% endblock %}
